# ===============================================
# CTU-Connect Environment Variables
# ===============================================
# Copy this file to .env and update values as needed
# NEVER commit .env file to version control!
# ===============================================

# ==================== Port Configuration ====================
EUREKA_PORT=8761
API_GATEWAY_PORT=8090
AUTH_SERVICE_PORT=8080
USER_SERVICE_PORT=8081
POST_SERVICE_PORT=8085
CHAT_SERVICE_PORT=8086
MEDIA_SERVICE_PORT=8084
RECOMMENDATION_SERVICE_PORT=8095

# ==================== PostgreSQL Configuration ====================
POSTGRES_USER=postgres
POSTGRES_PASSWORD=your_secure_password_here

# Auth Database
AUTH_DB_PORT=5433

# Media Database
MEDIA_DB_PORT=5434

# Recommendation Database
RECOMMEND_DB_USER=recommend_user
RECOMMEND_DB_PASSWORD=your_recommend_db_password_here

# ==================== MongoDB Configuration ====================
# Post Service MongoDB
POST_MONGODB_PORT=27018
# Chat Service MongoDB
CHAT_MONGODB_PORT=27019

# ==================== Neo4j Configuration ====================
NEO4J_AUTH=neo4j/your_neo4j_password_here
NEO4J_PASSWORD=your_neo4j_password_here

# ==================== Redis Configuration ====================
REDIS_PORT=6379
REDIS_PASSWORD=

# Recommendation Redis
RECOMMEND_REDIS_PORT=6380
RECOMMEND_REDIS_PASSWORD=your_recommend_redis_password_here

# ==================== Kafka Configuration ====================
KAFKA_PORT=9092

# ==================== JWT Configuration ====================
# Generate a secure key: openssl rand -base64 32
JWT_SECRET=your_jwt_secret_key_here_change_in_production
JWT_EXPIRATION=86400000
JWT_REFRESH_EXPIRATION=604800000

# ==================== Email Configuration (Gmail SMTP) ====================
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
# Use Gmail App Password (not your regular password)
# Generate at: https://myaccount.google.com/apppasswords
MAIL_PASSWORD=your_gmail_app_password_here

# ==================== Cloudinary Configuration (Media Storage) ====================
# Sign up at: https://cloudinary.com
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret

# ==================== reCAPTCHA Configuration ====================
# Get keys at: https://www.google.com/recaptcha/admin
RECAPTCHA_SITE_KEY=your_recaptcha_site_key
RECAPTCHA_SECRET_KEY=your_recaptcha_secret_key

# ==================== Frontend Configuration ====================
NEXT_PUBLIC_API_URL=http://localhost:8090
NEXT_PUBLIC_WS_URL=ws://localhost:8086

# ==================== Docker Profile ====================
SPRING_PROFILES_ACTIVE=docker
