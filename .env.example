# CTU Connect Environment Variables
# Copy this file to .env and update values as needed

# Eureka Server
EUREKA_PORT=8761

# API Gateway
API_GATEWAY_PORT=8090

# Auth Service
AUTH_SERVICE_PORT=8080

# User Service
USER_SERVICE_PORT=8081

# Media Service
MEDIA_SERVICE_PORT=8084

# Database Configuration
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
AUTH_DB_PORT=5432

# Redis Configuration
REDIS_PORT=6379

# Recommendation Service
RECOMMENDATION_SECRET_KEY=recommendation-secret-key-change-in-production

# Email Configuration (for Auth Service)
MAIL_HOST=smtp.gmail.com
MAIL_PORT=587
MAIL_USERNAME=your_email@gmail.com
MAIL_PASSWORD=your_app_password

# Cloudinary Configuration (for Media Service)
CLOUDINARY_CLOUD_NAME=your_cloudinary_cloud_name
CLOUDINARY_API_KEY=your_cloudinary_api_key
CLOUDINARY_API_SECRET=your_cloudinary_api_secret
