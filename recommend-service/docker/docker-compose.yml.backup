
services:
  # Python Inference Service (PhoBERT Model)
  recommend-python:
    build:
      context: ..
      dockerfile: docker/recommend-python.Dockerfile
    container_name: ctu-recommend-python
    ports:
      - "8000:8000"
    environment:
      - MODEL_PATH=/app/model/academic_posts_model
      - LOG_LEVEL=INFO
      - WORKERS=2
    volumes:
      - ../python-model/model:/app/model
      - ../python-model/logs:/app/logs
    networks:
      - ctu-network
    healthcheck:
      test: ["CMD", "curl", "-f", "http://localhost:8000/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    restart: unless-stopped

  # Java API Service (Recommendation Engine)
  recommend-java:
    build:
      context: ..
      dockerfile: docker/recommend-java.Dockerfile
    container_name: ctu-recommend-java
    ports:
      - "8081:8081"
    environment:
      - SPRING_PROFILES_ACTIVE=prod
      - PYTHON_SERVICE_URL=http://recommend-python:8000
      - EUREKA_CLIENT_SERVICEURL_DEFAULTZONE=http://eureka-server:8761/eureka/
      - SPRING_DATASOURCE_URL=jdbc:postgresql://postgres:5432/ctuconnect
      - SPRING_DATASOURCE_USERNAME=postgres
      - SPRING_DATASOURCE_PASSWORD=postgres
      - SPRING_DATA_NEO4J_URI=bolt://neo4j:7687
      - SPRING_DATA_NEO4J_USERNAME=neo4j
      - SPRING_DATA_NEO4J_PASSWORD=password
      - SPRING_REDIS_HOST=redis
      - SPRING_REDIS_PORT=6379
      - SPRING_KAFKA_BOOTSTRAP_SERVERS=kafka:9092
    depends_on:
      - recommend-python
    networks:
      - ctu-network
    healthcheck:
      test: ["CMD", "wget", "--no-verbose", "--tries=1", "--spider", "http://localhost:8081/actuator/health"]
      interval: 30s
      timeout: 10s
      retries: 3
      start_period: 60s
    restart: unless-stopped

networks:
  ctu-network:
    external: true
    name: ctu-connect-network
