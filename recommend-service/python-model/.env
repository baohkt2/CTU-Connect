# Python ML Service Configuration

# Service
PORT=8000
DEBUG=true
LOG_LEVEL=INFO

# Python encoding (Windows fix)
PYTHONIOENCODING=utf-8

# Model paths - Use PhoBERT from HuggingFace
MODEL_PATH=vinai/phobert-base

# Database
DATABASE_URL=postgresql://recommend_user:recommend_pass@localhost:5435/recommend_db

# Redis (recommend-redis on port 6380)
REDIS_HOST=localhost
REDIS_PORT=6380
REDIS_PASSWORD=recommend_redis_pass
REDIS_URL=redis://:recommend_redis_pass@localhost:6380/0

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092

# PhoBERT
PHOBERT_MODEL_NAME=vinai/phobert-base
EMBEDDING_DIMENSION=768
MAX_SEQUENCE_LENGTH=256

# Ranking weights (must match Java configuration)
WEIGHT_CONTENT_SIMILARITY=0.35
WEIGHT_IMPLICIT_FEEDBACK=0.30
WEIGHT_ACADEMIC_SCORE=0.25
WEIGHT_POPULARITY=0.10
